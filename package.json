  },
  "homepage": "https://github.com/ianwalter/bff#readme",
  "dependencies": {
    "@ianwalter/cli": "^1.1.1",
    "@ianwalter/print": "^2.3.1",
    "common-tags": "^1.8.0",
    "expect": "^24.7.1",
    "globby": "^9.2.0",
    "jest-snapshot": "^24.8.0",
