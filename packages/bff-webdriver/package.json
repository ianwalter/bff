{
  "name": "@ianwalter/bff-webdriver",
  "description": "A bff plugin to enable WebDriver-based testing",
  "version": "10.0.1",
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "homepage": "https://github.com/ianwalter/bff/blob/main/packages/bff-webdriver#readme",
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "bff-webdriver": "cli.js"
  },
  "type": "module",
  "module": "index.js",
  "scripts": {
    "test": "bff",
    "bff-webdriver": "./cli.js",
    "postinstall": "./cli.js setup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bff.git",
    "directory": "packages/bff-webdriver"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/bff/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ianwalter"
  },
  "keywords": [
    "bff",
    "webdriver",
    "selenium",
    "test",
    "testing",
    "automated",
    "standalone"
  ],
  "files": [
    "index.js",
    "cleanup.js",
    "cli.js",
    "integrations"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@generates/logger": "^0.0.9",
    "@ianwalter/cli": "^4.1.0",
    "dotenv": "^8.2.0",
    "execa": "^5.0.0",
    "p-settle": "^4.1.1",
    "selenium-standalone": "^6.23.0",
    "webdriverio": "^6.12.1"
  },
  "devDependencies": {
    "@ianwalter/nrg": "^0.18.0",
    "@ianwalter/url": "^2.0.0"
  },
  "bff": {
    "log": {
      "level": "debug"
    },
    "plugins": [
      "config",
      "index"
    ],
    "webdriver": {
      "capabilities": {
        "browserName": "chrome"
      }
    }
  }
