{
  "name": "@ianwalter/bff-webdriver",
  "description": "A bff plugin to enable WebDriver-based testing",
  "version": "8.0.0",
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "homepage": "https://github.com/ianwalter/bff/blob/main/packages/bff-webdriver#readme",
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "bff-webdriver": "cli.js"
  },
  "main": "index.js",
  "scripts": {
    "test": "bff",
    "bff-webdriver": "./cli.js",
    "postinstall": "./cli.js setup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bff.git",
    "directory": "packages/bff-webdriver"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/bff/issues"
  },
  "keywords": [
    "bff",
    "webdriver",
    "selenium",
    "test",
    "testing",
    "automated",
    "standalone"
  ],
  "files": [
    "index.js",
    "cleanup.js",
    "cli.js",
    "integrations"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ianwalter/cli": "^4.1.0",
    "@ianwalter/print": "^6.0.0",
    "dotenv": "^8.2.0",
    "execa": "^4.1.0",
    "p-settle": "^4.1.1",
    "selenium-standalone": "^6.20.1",
    "webdriverio": "^6.6.7"
  },
  "devDependencies": {
    "@ianwalter/bff": "^9.12.0",
    "@ianwalter/nrg": "^0.3.1",
    "@ianwalter/url": "^2.0.0"
  },
  "peerDependencies": {
    "@ianwalter/bff": "^9.12.0"
  },
  "bff": {
    "log": {
      "level": "debug"
    },
    "plugins": [
      "config",
      "index"
    ],
    "webdriver": {
      "capabilities": {
        "browserName": "chrome"
      }
    }
  }
}
